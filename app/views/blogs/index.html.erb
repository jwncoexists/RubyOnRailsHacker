<header class="page-title">
    <div class="container">
        <h1>Blogs</h1>
        <% if can? :manage, Blog %>
          <ol class="breadcrumb">
              <li><%= link_to 'New', new_blog_path %></li>
          </ol>
        <% end %>
    </div> <!-- container -->
</header>

<div class="container">
