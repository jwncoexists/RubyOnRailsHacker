<div>
    <header class="page-title">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h1>Blogs</h1>
                </div>
                <div class="col-md-4 col-md-offset-4">
                    <div class="block">
                        <div class="input-group">
                          <%= form_tag search_blogs_path, method: 'get' do %>
                            <%= text_field_tag :q, params[:q] %>
                            <%= submit_tag :search, class: "btn btn-primary" %>
                          <% end %>
                        </div><!-- /input-group -->
                    </div>
                </div> 
            </div>
            <% if can? :manage, Blog %>
              <ol class="breadcrumb">
                  <li><%= link_to 'New', new_blog_path %></li>
              </ol>
            <% end %>
        </div> <!-- container -->
    </header>

    <div class="container">
        <div class="col-md-8">
          <% @blogs.each do |blog| %>
            <article class="post">
                <h1><%= link_to blog.title, blog_path(blog), class: "transicion" %></h1>
                <div class="row">
                    <div class="col-lg-6">
                        <%= image_tag( "4.jpg", class: "img-responsive", alt: "Image") %>
                    </div>
                    <div class="col-lg-6">
                        <p><%= markdown blog.intro %></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="post-info"><div class="pi-content">Posted on <span><%= blog.created_at %></span> | Category: <a href="#">Portfolio</a>, <a href="#">Design</a>.</div> <%= link_to 'Read more', edit_blog_path(blog), class: "btn btn-primary btn-sm pull-right" %></div>
                    </div>
                </div>
            </article> <!-- post -->
          <% end %>

          <section>
              <ul class="pagination">
                  <li class="disabled"><a href="#">&laquo;</a></li>
                  <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                  <li><a href="#">2</a></li>
                  <li><a href="#">3</a></li>
                  <li><a href="#">4</a></li>
                  <li><a href="#">5</a></li>
                  <li><a href="#">6</a></li>
                  <li><a href="#">7</a></li>
                  <li><a href="#">8</a></li>
                  <li><a href="#">9</a></li>
                  <li><a href="#">10</a></li>
                  <li><a href="#">11</a></li>
                  <li><a href="#">12</a></li>
                  <li><a href="#">13</a></li>
                  <li><a href="#">14</a></li>
                  <li><a href="#">15</a></li>
                  <li><a href="#">&raquo;</a></li>
              </ul>
          </section>
        </div> <!-- col-md-8 -->
    </div> <!-- container -->
</div>


